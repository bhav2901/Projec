1) ---src/RoutesConfig.js

import React from "react";
import { Routes, Route } from "react-router-dom";

import FilesPanel from "./components/Filespanel/FilesPanel";
import Downloads from "./components/Downloads";
import Favorites from "./components/Favorites";

export default function RoutesConfig() {
  return (
    <Routes>
      <Route path="/" element={<FilesPanel />} />
      <Route path="/downloads" element={<Downloads />} />
      <Route path="/favorites" element={<Favorites />} />
      {/* Add more routes here later */}
    </Routes>
  );
}


2)src/App.js

import React from "react";
import Sidebar from "./components/Sidebars/Sidebar";
import TopBlue from "./components/TopBlue";
import Navbar from "./components/Navbar";
import RoutesConfig from "./RoutesConfig";
import { BrowserRouter } from "react-router-dom";

export default function App() {
  return (
    <BrowserRouter>
      <div className="bg-light">
        {/* Page Title */}
        <header className="py-2 text-center user-title">
          <h1 className="mb-0">User Dashboard</h1>
          {/* Or use a logo image:
          <img src="/sc.png" alt="Logo" className="logo-img me-2" /> */}
        </header>

        <div className="container-fluid px-4">
          <div className="row gx-3">
            {/* LEFT: Sidebar */}
            <aside className="col-md-3 col-lg-2 pe-0">
              <Sidebar />
            </aside>

            {/* RIGHT: Main */}
            <main className="col-md-9 col-lg-10">
              <Navbar />
              <TopBlue />
              <div className="container mt-3">
                <RoutesConfig />
              </div>
            </main>
          </div>
        </div>
      </div>
    </BrowserRouter>
  );
}

3) src/index.js

import React from "react";
import ReactDOM from "react-dom/client";
import App from "./App";
import "bootstrap/dist/css/bootstrap.min.css";
import "bootstrap-icons/font/bootstrap-icons.css";
import "./index.css"; // your own custom CSS

const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(
  <React.StrictMode>
    <App />
  </React.StrictMode>
);
